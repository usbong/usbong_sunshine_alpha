<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/UsbongAudioPlayerParentLayout"
	android:id="@+id/parent_layout_id"       	
	>
	<TextView android:id="@+id/audio_recorder_textview"
	    style="@style/UsbongDefaultTextView"	    	
	    android:text="@string/audio_recorder_textview" />	
	<Button android:id="@+id/record_button"
	    style="@style/UsbongAudioRecorderButton"	    	
	    android:text="Record" />
	<Button android:id="@+id/stop_button"
	    style="@style/UsbongAudioRecorderButton"	    	
	    android:text="Stop" />   
	<Button android:id="@+id/play_button"
	    style="@style/UsbongAudioRecorderButton"	    	
	    android:text="Play" />        
	    
	<LinearLayout
		style="@style/UsbongDefaultBackNextButtonLayout">	
	    <Button android:id="@+id/back_button"
		    style="@style/UsbongDefaultBackNextButton"
		    android:text="Back"/>
		    
	   	<Button android:id="@+id/next_button"
		    style="@style/UsbongDefaultBackNextButton"
		    android:text="Next"/>	    
	</LinearLayout>
</LinearLayout>